<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/relativeLayout5" >

    <View
        android:id="@+id/view5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" />
    
    <Button
        android:id="@+id/floor_plus5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:height="50dp"
        android:text="F +"
        android:textSize="18dp"
        android:width="50dp" />

    <Button
        android:id="@+id/floor_minus5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/floor_plus5"
        android:layout_alignBottom="@+id/floor_plus5"
        android:layout_marginRight="20dp"
        android:layout_toLeftOf="@+id/floor_plus5"
        android:height="50dp"
        android:text="F -"
        android:textSize="18dp"
        android:width="50dp" />

    <Button
        android:id="@+id/but_Routing5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:text="Show Route"
        android:textSize="18dp"
        android:width="130dp" />

    <Button
        android:id="@+id/but_Campus5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/but_Routing5"
        android:layout_toRightOf="@+id/but_Routing5"
        android:layout_marginLeft="20dp"
        android:text="Campus"
        android:textSize="18dp"
        android:width="130dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/floor_minus5"
        android:layout_alignRight="@+id/floor_plus5"
        android:layout_below="@+id/floor_minus5"
        android:layout_marginTop="20dp"
        android:text="Route:" />

    <Button
        android:id="@+id/but_Check5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/but_Campus5"
        android:layout_alignBottom="@+id/but_Campus5"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignRight="@+id/textView5"
        android:textSize="18dp"
        android:text="Check" />

</RelativeLayout>