<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <View
        android:id="@+id/view7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" />

    <Button
        android:id="@+id/floor_plus7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:height="50dp"
        android:text="F +"
        android:textSize="18dp"
        android:width="50dp" />

    <Button
        android:id="@+id/floor_minus7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/floor_plus7"
        android:layout_alignBottom="@+id/floor_plus7"
        android:layout_marginRight="20dp"
        android:layout_toLeftOf="@+id/floor_plus7"
        android:height="50dp"
        android:text="F -"
        android:textSize="18dp"
        android:width="50dp" />

    <Button
        android:id="@+id/but_Routing7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:text="Routing"
        android:textSize="18dp"
        android:width="130dp" />

    <Button
        android:id="@+id/but_Campus7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/but_Routing7"
        android:layout_toRightOf="@+id/but_Routing7"
        android:layout_marginLeft="20dp"
        android:text="Campus"
        android:textSize="18dp"
        android:width="130dp" />

</RelativeLayout>