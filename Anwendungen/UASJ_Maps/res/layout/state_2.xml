<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
	// Dieses xml legt die Anordnung der darzustellenden Elemente des Look up Location Men端s fest

    <TextView
        android:id="@+id/textView21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="57dp"
        android:text="Look up Location"
        android:textAppearance="?android:attr/textAppearanceLarge" />
    // Textausgabe Look up Location

    <Button
        android:id="@+id/but_Go2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="44dp"
        android:layout_marginLeft="32dp"
        android:layout_toRightOf="@+id/textView21"
        android:text="Go!"
        android:textSize="18dp"
        android:width="80dp" />
    // Button Go um zum Look up Location Output zu kommen

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" >
    // drei Textview und drei Spinner waagerecht anordnen; Beinhaltet eine Raumauswahl

        <TextView
            android:id="@+id/textView22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Room:"
            android:textAppearance="?android:attr/textAppearanceMedium" />
        // Textausgabe Room:

        <Spinner
            android:id="@+id/spinner21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:prompt="@string/house" />
        // Spinner f端r Haus

        <TextView
            android:id="@+id/dot21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="."
            android:textSize="35dp"
            android:layout_gravity="bottom" />
        // Textausgabe Trennzeichen

        <Spinner
            android:id="@+id/spinner22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:prompt="@string/floor" />
        // Spinner f端r Etage

        <TextView
            android:id="@+id/dot22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="."
            android:textSize="35dp"
            android:layout_gravity="bottom" />
        // Textausgabe Trennzeichen

        <Spinner
            android:id="@+id/spinner23"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:prompt="@string/room" />
        // Spinner f端r Raum
    </LinearLayout>

</RelativeLayout>